class Solution {
    public int solution(int[] A) {
        // write your code in C# 6.0 with .NET 4.5 (Mono)
        long[] nos = Array.ConvertAll(A, new Converter<int, long>(intToLong));
        return missingElement(nos);
    }
    
    public long intToLong(int t){
        return (long)t;    
    }
    
    public int missingElement(long[] A){
        long sum =0,res=0;
        long len = A.Length;
        Array.Sort(A);
        
        
        if(len == 0)
            return 1;
        else if(A[len-1] == len)
            return (int)A[len-1]+1;
        
        
        for(long i=1;i<=A[len-1];i++){
            sum+=i;    
        }
        
        for(long i=0;i<len;i++){
            res+=A[i];    
        }
        
        return (int)(sum-res);    
    }
}

